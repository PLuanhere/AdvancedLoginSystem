<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdvanceSignUpIn"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="Instantiatable,MissingClass"
            android:exported="true">
        </activity>

        <activity
            android:name=".SignUpSocialActivity"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <activity
            android:name=".SignUpVerificationActivity"
            android:exported="false" />

        <activity
            android:name=".SignUpGamesActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpSuccessActivity"
            android:exported="false" />

        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"/>
        <activity
            android:name=".VerifyPasswordCodeActivity"
            android:exported="false"/>
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"/>

        <activity
            android:name=".GuestLoadingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:noHistory="true" />

        <activity
            android:name=".GuestOnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>