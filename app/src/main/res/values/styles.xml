<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_accent</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/dark_purple</item>
    </style>

    <!-- Custom TextInputLayout style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="hintTextColor">@color/purple_accent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="AppTheme.PurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/purple_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppTheme.OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/orange_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppTheme.MaterialButton.Purple" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="AppTheme.MaterialButton.Orange" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
    </style>
</resources>